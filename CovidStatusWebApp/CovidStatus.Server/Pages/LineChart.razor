@using Syncfusion.Blazor.Charts

@inherits CovidStatus.Server.Pages.Bases.LineChartBase

<SfChart Title="@ChartTitle">
    <ChartEvents Load="ChartLoad" />
    <ChartArea><ChartAreaBorder Width="0"></ChartAreaBorder></ChartArea>
    <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.DateTime" LabelFormat="M-d-y" IntervalType="IntervalType.Days" EdgeLabelPlacement="EdgeLabelPlacement.Shift">
        <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
    </ChartPrimaryXAxis>
    <ChartPrimaryYAxis LabelFormat="{value}" RangePadding="ChartRangePadding.None" Maximum="@MaxChartNumber" Minimum="@MinChartNumber" Interval="@ChartInterval">
        <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
        <ChartAxisMajorTickLines Width="0"></ChartAxisMajorTickLines>
    </ChartPrimaryYAxis>
    <ChartTooltipSettings Enable="true"></ChartTooltipSettings>
    <ChartSeriesCollection>
        <ChartSeries DataSource="@ChartData" Name="@ChartSeriesName" XName="xValue" Width="2" Fill="@LineColor"
                     Opacity="1" YName="yValue" Type="ChartSeriesType.Spline">
            <ChartMarker Visible="false" Width="10" Height="10">
            </ChartMarker>
        </ChartSeries>
    </ChartSeriesCollection>
</SfChart>